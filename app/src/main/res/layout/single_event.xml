<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/abc_cab_background_internal_bg"
    style="@style/Base.V11.Theme.AppCompat.Light.Dialog"
    android:layout_marginBottom="10dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="5dp"
    android:elevation="@dimen/abc_floating_window_z">
    <!-- Title-->
    <TextView
        android:id="@+id/textViewEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Org Name"
        android:textSize="16sp"
        android:textColor="#000"/>

    <LinearLayout
        android:id="@+id/catagory"
        android:layout_below="@+id/textViewEventName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewEventDate"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Health Issues"
            android:gravity="center"/>
    </LinearLayout>


    <!-- Location-->
    <LinearLayout
        android:id="@+id/location"
        android:layout_below="@+id/catagory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewEventLocation"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="2612 W Heiman Street"
            android:gravity="center"/>
    </LinearLayout>


    <!-- Amount Raised-->
    <LinearLayout
        android:id="@+id/lklk"
        android:layout_below="@+id/location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewEventAuthor"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="$0"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/buttonAttend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attend"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/location"
        android:layout_alignBottom="@+id/textViewEventAuthor" />

</RelativeLayout>